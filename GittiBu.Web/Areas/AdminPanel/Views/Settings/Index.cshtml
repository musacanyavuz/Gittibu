@model SettingsIndexViewModel

@{
    ViewBag.Title = "Ayarlar";
    Layout = "AdminLayout";
    ViewData["ActiveMenu"] = "menu-item-settings";
}

@section Styles{
    <link href="/AdminContent/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css">
}

<div class="m-content">
    <div class="row">
        <div class="col-12">
            <div class="m-portlet m-portlet--mobile">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <h3 class="m-portlet__head-text">
                                Ayarlar
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="m-portlet__body">
                    <div class="table-responsive">
                        <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ad</th>
                                <th>Değer</th>
                                <th>İşlemler</th>
                            </tr>
                            </thead>
                            <tbody>

                            @foreach (var setting in Model.SystemSettins)
                            {
                                <tr id="row_@setting.ID">
                                    <td> @setting.ID</td>
                                    <td>@(setting.Name)</td>
                                    <td> @setting.Value </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/AdminPanel/Settings/EditSetting/@setting.ID" class="m-btn btn btn-info" title="Düzenle">
                                                <i class="la la-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <div class="m-portlet m-portlet--mobile">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <h3 class="m-portlet__head-text">
                                Dopingler ve Ücretler
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="m-portlet__body">
                    <div class="table-responsive">
                        <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_2">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ad</th>
                                <th>Gün</th>
                                <th>Ücret</th>
                                <th>İşlemler</th>
                            </tr>
                            </thead>
                            <tbody>

                            @foreach (var doping in Model.Dopings)
                            {
                                <tr id="row_@doping.ID">
                                    <td> @doping.ID</td>
                                    <td>@(doping.Name)</td>
                                    <td>@doping.Day Gün </td>
                                    <td> @doping.Price TL </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/AdminPanel/Settings/EditDoping/@doping.ID" class="m-btn btn btn-info" title="Düzenle">
                                                <i class="la la-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>



@section Scripts{
    <script src="/AdminContent/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script>
        $("#m_table_1").DataTable({
            order: [0, 'desc'],
            dom: "<'row'<'col-sm-6 text-left'f><'col-sm-6 text-right'B>>\n\t\t\t<'row'<'col-sm-12'tr>>\n\t\t\t<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 dataTables_pager'lp>>",
            buttons: ["print", "copyHtml5", "excelHtml5", "csvHtml5", "pdfHtml5"]
        });
        $("#m_table_2").DataTable({
            dom: "<'row'<'col-sm-6 text-left'f><'col-sm-6 text-right'B>>\n\t\t\t<'row'<'col-sm-12'tr>>\n\t\t\t<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 dataTables_pager'lp>>",
            buttons: ["print", "copyHtml5", "excelHtml5", "csvHtml5", "pdfHtml5"]
        });
    </script>
  
}

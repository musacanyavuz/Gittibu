                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet!',
                cancelButtonText: 'Vazgeç',
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        url: "/AdminPanel/DeletePaymentRequest",
                        type: "POST",
                        data: { id },
                        success: function (data) {
                            if (data.isSuccess) {
                                if (isAdvertOrder) {
                                    $("#onlinepay_" + id).remove();
                                } else {
                                    $("#payment_" + id).remove();
                                }

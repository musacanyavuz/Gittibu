    <script>
        function deletePaymentRequest(id, isAdvertOrder = false) {
            Swal({
                title: '#' + id + ' kodlu ödemeyi silmek istiyor musunuz?',
                text: 'Ödeme kaydı silinecek. Buna bağlı işlemlerle ilgili bir güncelleme yapılmayacak.',

@model List<AdvertCategory>
@{
    ViewBag.Title = "İlan Kategorisi Ekle";
    Layout = "AdminLayout";
    ViewData["ActiveMenu"] = "menu-item-ad-categories";
}



<div class="m-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <span class="m-portlet__head-icon m--hide">
                    <i class="la la-gear"></i>
                </span>
                <h3 class="m-portlet__head-text">
                    Kategori Ekle
                </h3>
            </div>
        </div>
    </div>

    
    @using(Html.BeginForm("Create", "AdvertCategories", FormMethod.Post, 
        new { enctype = "multipart/form-data", @class = "m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" }))
    {
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <label class="col-lg-2 col-form-label">Üst Kategori:</label>
                <div class="col-lg-3">
                    <select name="ParentCategoryID" class="form-control">
                        <option value="0">Yok</option>
                        @foreach (var category in Model)
                        {
                            <option value="@category.ID">@category.Name</option>
                        }
                    </select>
                </div>
                <label class="col-lg-2 col-form-label">Icon:</label>
                <div class="col-lg-3">
                    <input type="file" name="File" class="form-control"/>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label class="col-lg-2 col-form-label">Sırama:</label>
                <div class="col-lg-3">
                    <input type="number" name="Order" class="form-control" value="0" required/>
                </div>
                <label class="col-lg-2 col-form-label">Max. Taksit Seçeneği:</label>
                <div class="col-lg-3">
                    <input type="number" name="MaxInstallment" class="form-control" value="1" required/>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label class="col-lg-2 col-form-label"></label>
                <div class="col-lg-3">
                    <label class="m-checkbox m-checkbox--state-success">
                        <input type="checkbox" name="IsActive" value="false"> Aktif
                        <span></span>
                    </label>
                </div>
            </div>
        </div>
        
        <div class="m-divider">
            <span></span>
            <span>Türkçe İçerik</span>
            <span></span>
        </div>
        
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <label class="col-lg-2 col-form-label">Ad:</label>
                <div class="col-lg-3">
                    <input type="text" class="form-control m-input" name="NameTr" required>
                </div>
                <label class="col-lg-2 col-form-label">Açıklama:</label>
                <div class="col-lg-3">
                    <textarea class="form-control m-input" name="DescriptionTr" rows="3" required></textarea>
                </div>
                
            </div>
        </div>
        
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <label class="col-lg-2 col-form-label">[SEO] Açıklama:</label>
                <div class="col-lg-3">
                    <textarea class="form-control m-input" name="SeoDescriptionTr" rows="3" required></textarea>
                </div>
                <label class="col-lg-2 col-form-label">[SEO] Keywords:</label>
                <div class="col-lg-3">
                    <textarea class="form-control m-input" name="SeoKeywordsTr" rows="3" required></textarea>
                </div>
            </div>
        </div>
        
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <label class="col-lg-2 col-form-label">[SEO] URL Yapısı:</label>
                <div class="col-lg-3">
                    <input type="text" class="form-control m-input" name="SlugTr" required>
                </div>
            </div>
        </div>
        
        <div class="m-divider">
            <span></span>
            <span>İngilizce İçerik</span>
            <span></span>
        </div>
        
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <label class="col-lg-2 col-form-label">Ad:</label>
                <div class="col-lg-3">
                    <input type="text" class="form-control m-input" name="NameEn" required>
                </div>
                <label class="col-lg-2 col-form-label">Açıklama:</label>
                <div class="col-lg-3">
                    <textarea class="form-control m-input" name="DescriptionEn" rows="3" required></textarea>
                </div>
            </div>
        </div>
        
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <label class="col-lg-2 col-form-label">[SEO] Açıklama:</label>
                <div class="col-lg-3">
                    <textarea class="form-control m-input" name="SeoDescriptionEn" rows="3" required></textarea>
                </div>
                <label class="col-lg-2 col-form-label">[SEO] Keywords:</label>
                <div class="col-lg-3">
                    <textarea class="form-control m-input" name="SeoKeywordsEn" rows="3" required></textarea>
                </div>
            </div>
        </div>
        
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <label class="col-lg-2 col-form-label">[SEO] URL Yapısı:</label>
                <div class="col-lg-3">
                    <input type="text" class="form-control m-input" name="SlugEn" required>
                </div>
            </div>
        </div>
        
        
        <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions--solid">
                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-10">
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <a href="/AdminPanel/AdvertCategories" class="btn btn-secondary">Vazgeç</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


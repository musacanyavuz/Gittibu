@model UserSecurePaymentDetail

@{
    ViewBag.Title = "Alt Üye İşyeri Bilgileri";
    Layout = "AdminLayout";
    ViewData["ActiveMenu"] = "menu-item-submerchants";
}

<div class="m-content">

    <div class="row">
        <div class="col-xl-6">
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon m--hide">
                                <i class="la la-gear"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                Alt Üye İşyeri Bilgileri
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="m-portlet__body">	
                    <div class="m-form__section m-form__section--first">
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">ID:</label>
                            <div class="col-lg-6 col-form-label">
                                #@Model.ID
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Ad:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.Name
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Soyad:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.Surname
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">IBAN:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.IBAN
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Telefon:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.MobilePhone
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Email:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.Email
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Gönderici Adresi:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.SenderAddress
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Fatura Adresi:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.InvoiceAddress
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Kayıt Tipi:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.Type
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Kayıt Tarihi:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.CreatedDate
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-6">
             <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon m--hide">
                                <i class="la la-gear"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                Kurumsal Bilgiler
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="m-portlet__body">	
                    <div class="m-form__section m-form__section--first">
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Ünvan:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.CompanyName
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Vergi Dairesi:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.TaxOffice
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Vergi Numarası:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.TaxNumber
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Telefon:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.CompanyPhone
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Fax:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.CompanyFax
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Email:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.CompanyEmail
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">Iyzico Key:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.IyzicoSubMerchantKey
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-4 col-form-label">TC:</label>
                            <div class="col-lg-6 col-form-label">
                                @Model.TC
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
